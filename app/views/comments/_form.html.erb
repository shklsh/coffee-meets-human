<%= form_with(model: @comment, local: true) do |form| %>
  
  <div class="card" style="width: 70rem;">
    <div class="card-body">
      <div class="form-group row">
        <%= form.label :name, class: "col-2 col-form-label" %>
        <div class="col-8">
          <%= form.text_field :name, class: "form-control shadow rounded" %>
        </div>
      </div>
      
      <div class="form-group row">
        <%= form.label :comment, class: "col-2 col-form-label" %>
        <div class="col-8">
          <%= form.text_field :comment, class: "form-control shadow rounded" %>
        </div>
      </div>

      <div class="actions">
        <%= form.submit class: "btn btn-primary btn-xs"%>
      </div>
    </div>
  </div>

<% end %>
