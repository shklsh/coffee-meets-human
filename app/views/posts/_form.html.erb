<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card" style="width: 85rem;">
    <div class="card-body">
      <div class="form-group row">
        <%= form.label :title, class: "col-2 col-form-label" %>
        <div class="col-9">
          <%= form.text_field :title, class: "form-control shadow rounded" %>
        </div>
      </div>
      
      <div class="form-group row">
        <%= form.label :content, class: "col-2 col-form-label" %>
        <div class="col-9">
          <%= form.text_field :content, class: "form-control shadow rounded" %>
        </div>
      </div>

      <div class="actions">
        <%= form.submit class: "btn btn-primary btn-xs"%>
      </div>
    </div>
  </div>
<% end %>

