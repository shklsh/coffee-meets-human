<p id="notice"><%= notice %></p>

<h1>Posts</h1>
  <% @posts.each do |post| %>
    <div class="card" style="width: 70rem;">
      <div class="card-body">
        <h2 class="card-title"><%= post.title %></h2>
        <p class="card-text"><%= post.content %></p>
        <%= link_to 'Show', post, class: "btn btn-primary btn-xs" %>
        <%= link_to 'Edit', edit_post_path(post), class: "btn btn-info btn-xs" %>
        <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %>
      </div>
    </div>
  <% end %>

  <br>

<div align="center">
  <%= link_to 'New Post', new_post_path, class: "btn btn-primary btn-xs" %>
</div>